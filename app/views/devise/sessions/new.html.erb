 <div class= "mt-2 m-1">
    <div class="border border-primary rounded m-1" style="padding:5px;">
    <h1>ログイン</h1>
    </div><br>
    <div class='login-flash-message'>
      <%= flash[:notice] %>
      <%= flash[:alert] %>
    </div>
    <%= form_with model: @user, url: user_session_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <div class="mt-2">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true %>
      </div>

      <div class="mt-2">
        <%= f.label :password, "パスワード（6文字以上）" %><br />
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <div class= "m-3">
        <%= f.submit "ログイン",class: 'btn btn-primary btn-lg' %>
      </div>
      <div class= "m-2">
        <%=link_to 'ログインせず戻る', root_path, class: 'btn btn-danger btn-lg' %>
      </div>
    <% end %>
</div>