<div class= "mt-2 m-1">
    <div class="border border-primary rounded m-1" style="padding:5px;">
    <h1>新規登録</h1>
    </div><br>
    <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :nickname,"ユーザー名" %><br />
        <%= f.text_field :nickname, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email %>
      </div>

      <div class="field">
        <%= f.label :encrypted_password, "パスワード（6文字以上）" %><br />
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "パスワード再入力" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>

      <div class="mt-2 m-1">
        <%= f.submit "新規登録" ,class: 'btn btn-primary btn-lg'%>
      </div>
    <% end %>
</div>